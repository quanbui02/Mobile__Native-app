<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp"
        tools:targetApi="31">
        <activity
            android:name=".DeleteFolderActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_folder"
            android:theme="@style/Theme.NoteApp" />
        <activity
            android:name=".DeleteNoteListActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_note_list"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.NoteApp" />
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:label="@string/title_activity_add_note"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.NoteApp" />
        <activity
            android:name=".AddFolderActivity"
            android:exported="false"
            android:label="@string/title_activity_add_folder"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.NoteApp" />
        <activity
            android:name=".NoteListActivity"
            android:exported="false"
            android:label="@string/title_activity_note_list"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.NoteApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.NoteApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>