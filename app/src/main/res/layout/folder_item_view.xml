<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/paddingLeft_item_folder_item"
    android:paddingTop="@dimen/paddingTop_item_folder_item"
    android:paddingRight="@dimen/paddingRight_item_folder_item"
    android:layout_marginLeft="@dimen/marginLeft_item_folder_item"
    android:layout_marginRight="@dimen/marginRight_item_folder_item"
    android:layout_marginBottom="@dimen/marginBottom_item_folder_item"
    android:background="@drawable/item_note"
    android:paddingBottom="@dimen/paddingBottom_item_folder_item">

    <TextView
        android:id="@+id/nameFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Folder1"
        android:textSize="@dimen/textSize_text_folder_item"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>